# Clock definition
create_clock -name clk_1MHz -period 1000 [get_ports clk_1MHz]

# Input delay for cs_out signal
set_input_delay -clock clk_1MHz 5 [get_ports cs_out]

# Output delay for color and filter signals
set_output_delay -clock clk_1MHz 5 [get_ports {color filter}]

# Set clock uncertainty
set_clock_uncertainty 0.5 [get_clocks clk_1MHz]

